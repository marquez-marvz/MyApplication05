<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnCountAbsent"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="140dp"
            android:text="A=18"
            android:textSize="15dp" />



        <Button
            android:id="@+id/btnCountExcuse"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="287dp"
            android:layout_marginTop="140dp"
            android:text="E=18"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCountPresent"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="140dp"
            android:text="P=18"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCountLate"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="157dp"
            android:layout_marginTop="140dp"
            android:text="L=18"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtAttendanceSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="Hello"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtAttendanceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="70dp"
            android:text="Hello"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnAttendanceAmPm1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="65dp"
            android:text="AM"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnSortData"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="65dp"
            android:text="GE"
            android:textSize="10dp" />


        <Button
            android:id="@+id/btnSetAllPresent"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="65dp"
            android:text="ALL P"
            android:textSize="10dp" />


        <Button
            android:id="@+id/btnCopyAttendance"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="252dp"
            android:layout_marginTop="65dp"
            android:padding="0dp"
            android:text="COPY"
            android:textSize="10dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnShowDialog"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="140dp"
            android:text="SHOW DIALOG"
            android:textSize="12sp"
            android:visibility="visible" />


        <Button
            android:id="@+id/btnShowGraph"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="100dp"
            android:text="CHART"
            android:textSize="12sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnSearchFirst"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="100dp"
            android:text="A-C"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSearchSecond"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="100dp"
            android:text="D-J"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSearchThird"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="100dp"
            android:text="K-O"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSearchFourth"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="100dp"
            android:text="P-R"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSearchFifth"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="100dp"
            android:text="S-Z"
            android:textSize="12dp" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listAttendance"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>
