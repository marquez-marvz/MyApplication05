<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnSet"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="42dp"
            android:text="A"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/cboSubjectAnswer"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:prompt="@string/section_prompt"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/cboQuizCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:prompt="@string/section_prompt"
            android:spinnerMode="dialog" />



        <Button
            android:id="@+id/btnKeyWord"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="5dp"
            android:text="QUIZ3"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnTotalScore"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="5dp"
            android:text="40"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtCheckSection"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="45dp"
            android:text="Hello"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/cboStudentNane"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="80dp"
            android:padding="0dp"
            android:prompt="@string/section_prompt"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/cboActivity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="45dp"
            android:padding="0dp"
            android:prompt="@string/section_prompt"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/btnCheckPage"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:text="PAGE 1"
            android:textSize="10dp" />


        <Button
            android:id="@+id/btnNextStudent"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="70dp"
            android:text="NEXT"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnPrevStudent"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="70dp"
            android:text="PREV"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtLongAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="125dp"
            android:text="-----"
            android:textSize="17dp"/>

        <com.ortiz.touchview.TouchImageView
            android:id="@+id/imgStudent"
            android:layout_width="350dp"
            android:layout_height="650dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/xxx" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listCheckAnswer"
            android:layout_width="100dp"
            android:layout_marginTop="130dp"
            android:layout_height="match_parent" />













    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
