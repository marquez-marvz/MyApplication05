<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id="@+id/txtstudentnumber"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:hint="Student Nuumber"
        android:enabled="false"
        android:layout_marginTop="20dp" />'


    <EditText
        android:id="@+id/txtfirstname"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:hint="First Nanme"
        android:enabled="false"
        android:layout_marginTop="70dp" />


    <EditText
        android:id="@+id/txtlastname"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:hint="Last Name"
        android:enabled="false"
        android:layout_marginTop="120dp" />

    <Spinner
        android:id="@+id/cbogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/grpNumber"
        android:spinnerMode="dialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="190dp"
        android:clickable="false"
        android:prompt="@string/student_prompt" />

    <Spinner
        android:id="@+id/cbosection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/section_choice"
        android:spinnerMode="dialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="240dp"
        android:clickable="false"
        android:prompt="@string/section_prompt" />


    <Button
        android:id="@+id/btnSaveRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="15dp"
        android:textSize="10sp"
        android:text="SAVE RECORD" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="150dp"
        android:visibility="visible"
        android:textSize="10sp"
        android:text="DELETE" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="250dp"
        android:textSize="10sp"
        android:visibility="visible"
        android:text="CLOSE" />
</RelativeLayout>