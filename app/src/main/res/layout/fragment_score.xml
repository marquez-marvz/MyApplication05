<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GroupFragment">

    <!-- TODO: Update blank fragment layout -->


    <Spinner
        android:id="@+id/cboScoreActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="100dp"
        android:prompt="@string/section_prompt"
        android:spinnerMode="dialog"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnScoreSection"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="52dp"
        android:text="ADD GROUP"
        android:textSize="12dp"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listGroup"
        android:layout_width="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listMemberScore"
        android:layout_width="350dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="120dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        />


    <EditText
        android:id="@+id/txtGroupScore"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="220dp"
        android:textSize="20dp"
        android:text="" />

    <Button
        android:id="@+id/btnSetGrade"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="300dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="SET GRADE" />







</RelativeLayout>