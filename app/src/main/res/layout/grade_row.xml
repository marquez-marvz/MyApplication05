<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/rowtxtLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="last"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/rowtxtFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:text="First"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

<!--        <TextView-->
<!--            android:id="@+id/rowtxtEnrollmentStatus"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentStart="true"-->
<!--            android:layout_alignParentLeft="true"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_marginLeft="150dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:text="Passed"-->
<!--            android:textSize="15dp" />-->

        <Button
            android:id="@+id/btnEnrolled"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/check01"
            android:text=""
            android:visibility="visible" />

        <Button
            android:id="@+id/btnDropped"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/wrong01"
            android:text=""
            android:visibility="invisible" />

        <TextView
            android:id="@+id/rowOriginalGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="125dp"
            android:text="90"
            android:textSize="15dp" />



        <TextView
            android:id="@+id/rowFirstGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="115dp"
            android:text="FG"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/rowtxtGrade"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="175dp"
            android:inputType="number"
            android:text="88"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rowSecondGrade"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="175dp"
            android:inputType="number"
            android:text="SG"
            android:textSize="15sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/rowtxtEquivalentGrade"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="225dp"
            android:inputType="number"
            android:text="EQ"
            android:textSize="15sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/rowtxtAverageGrade"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="225dp"
            android:inputType="number"
            android:text="AG"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rowtxtAverageEquivalent"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="18dp"
            android:inputType="number"
            android:text="AE"
            android:textSize="15sp"
            android:visibility="visible" />


        <Button
            android:id="@+id/rowBtnComputation"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/copy"
            android:text=""
            android:visibility="visible" />

<!--        <Button-->
<!--            android:id="@+id/rowBtnCopyIndividualGrade"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:layout_alignParentLeft="true"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_marginLeft="265dp"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:drawableLeft="@drawable/copy"-->
<!--            android:text=""-->
<!--            android:visibility="visible" />-->

        <Button
            android:id="@+id/rowBtnScoreIndividual"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="300dp"
            android:drawableLeft="@drawable/person1"
            android:text=""
            android:visibility="visible" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
