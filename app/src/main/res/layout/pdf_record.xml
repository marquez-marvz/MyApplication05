<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtStudentNo"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="5678"
            android:textSize="12dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtActivityCode"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="5678"
            android:textSize="12dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Juan De la Cruz"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtActivityDescription"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Juan De la Cruz"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/txtPdfScore"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/btnPdfSaveScore"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/save"
            android:text=""
            android:visibility="invisible" />


        <Button
            android:id="@+id/btnPdfEditScore"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/edit"
            android:text=""
            android:visibility="visible" />


        <Button
            android:id="@+id/btnPdfRemark"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="65dp"
            android:background="#D3D3D3"
            android:padding="0dp"
            android:text="G-A"
            android:textSize="12dp"
            android:visibility="visible" />







    </RelativeLayout>

</androidx.cardview.widget.CardView>
