    <EditText
        android:id="@+id/txtStudentData"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp" />

    <EditText
        android:id="@+id/txtstudentnumber"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:hint="Student Number"
        android:enabled="false"
        android:layout_marginTop="5dp" />


    <EditText
        android:id="@+id/txtfirstname"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:hint="First Nanme"
        android:enabled="false"
        android:layout_marginTop="70dp" />


    <EditText
        android:id="@+id/txtlastname"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:enabled="false"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/txtMiddleName"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="170dp"
        android:enabled="false"
        android:hint="MiddleName"/>

    <EditText
        android:id="@+id/txtContact"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:enabled="false"
        android:textSize="14sp"
        android:hint="Student #"/>

    <Button
        android:id="@+id/btnCoppyContact"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="240dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/copy"
        android:text=""
        android:visibility="visible" />


    <EditText
        android:id="@+id/txtParent"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="220dp"
        android:textSize="14sp"
        android:enabled="true"
        android:hint="Parent #"/>

    <Button
        android:id="@+id/btnCoppyParent"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="240dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/copy"
        android:text=""
        android:visibility="visible" />




    <Spinner
        android:id="@+id/cboGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/gender_choice"
        android:spinnerMode="dialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:clickable="false"
        android:prompt="@string/gender_prompt" />




    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:textSize="14sp"
        android:enabled="true"
        android:inputType="text|textMultiLine"
        android:hint="Address"/>

    <EditText
        android:id="@+id/txtEmailAddress"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="360dp"
        android:textSize="14sp"
        android:enabled="true"
        android:inputType="text|textMultiLine"
        android:hint="Email Address"/>

    <EditText
        android:id="@+id/txtSchoolStudentNo"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"
        android:textSize="14sp"
        android:enabled="true"
        android:inputType="text|textMultiLine"
        android:hint="Student No"/>

    <Spinner
        android:id="@+id/cboSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="475dp"
        android:entries="@array/year_choice"
        android:prompt="@string/section_prompt"
        android:spinnerMode="dialog" />





    <Button
        android:id="@+id/btnSaveRecord"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="8dp"
        android:textSize="10dp"
        android:text="SAVE RECORD" />

    <com.ortiz.touchview.TouchImageView
        android:id="@+id/imgStudentPicture"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/marvin" />

    <Button
        android:id="@+id/btnPutInTextBox"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="550dp"
        android:text="OK"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnCopyStudentData"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="552dp"
        android:text="C0PY"

        android:textSize="10dp" />


    <Button
        android:id="@+id/btnCapture"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="300dp"
        android:text="CAPTURE"
        android:textSize="12dp" />

    <Button
        android:id="@+id/btnCLearTextBox"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="552dp"
        android:text="CLEAR"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="552dp"
        android:text="X"
        android:textSize="10sp"
        android:visibility="visible" />
</RelativeLayout>