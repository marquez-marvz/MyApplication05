<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">






    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="ADD" />

        <Button
            android:id="@+id/btnImport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:text="IMPORT"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnImport2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:text="IMPORT"
            android:visibility="visible" />


        <Button
            android:id="@+id/btnExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="5dp"
            android:text="EXPORT"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnSorted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="5dp"
            android:onClick="showPopMenu"
            android:visibility="visible" />


        <Spinner
            android:id="@+id/cboSectionSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:entries="@array/year_choice"
            android:prompt="@string/section_prompt"
            android:spinnerMode="dialog" />


        <Spinner
            android:id="@+id/cboSectionEnrolle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="450dp"
            android:layout_marginTop="15dp"
            android:prompt="@string/section_prompt"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/btnSetAllInactive"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="450dp"
            android:layout_marginTop="90dp"
            android:text="SET ALL INACTIVE"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSearchFirst"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="450dp"
            android:layout_marginTop="50dp"
            android:text="A-C"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSearchSecond"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="505dp"
            android:layout_marginTop="50dp"
            android:text="D-J"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSearchThird"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="560dp"
            android:layout_marginTop="50dp"
            android:text="K-O"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSearchFourth"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="615dp"
            android:layout_marginTop="50dp"
            android:text="P-R"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSearchFifth"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="670dp"
            android:layout_marginTop="50dp"
            android:text="S-Z"
            android:textSize="12dp" />

<!--********************************************-->


        <EditText
            android:id="@+id/txtSearchAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:hint="Search"
            android:textSize="25dp"
            android:visibility="visible" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listViewStudent"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listViewEnrolle"
            android:layout_width="350dp"
            android:layout_height="match_parent"

            android:layout_marginLeft="450dp"
            android:layout_marginTop="140dp" />


    </RelativeLayout>
    </HorizontalScrollView>
</LinearLayout>