<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/cboSectionActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:prompt="@string/section_prompt" />


        <Button
            android:id="@+id/btnAddActivity"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:text="ADD ACTIVITY"
            android:textSize="10sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnExport2"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:text="EXPORT GRADES"
            android:textSize="10sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnCoppyNoIndividual"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/copy"
            android:text=""
            android:visibility="visible" />

        <Button
            android:id="@+id/btnCoppyNoSubmission"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/copy"
            android:text=""
            android:visibility="visible" />

        <Button
            android:id="@+id/btnFirst"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="54dp"
            android:text="FIRST"
            android:textSize="12dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnSecond"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="55dp"
            android:text="SECOND"
            android:textSize="12dp"
            android:padding="0dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnThird"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="55dp"
            android:text="THIRD"
            android:textSize="12dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnChart"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="55dp"
            android:text="CHART"
            android:textSize="12dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnExportData"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="55dp"
            android:text="EXPORT"
            android:textSize="12dp"
            android:visibility="visible" />


        <Button
            android:id="@+id/btnImportCopy"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="55dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/copy"
            android:text=""
            android:visibility="visible" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:layout_marginTop="0dp"
        android:scrollbars="none"
        android:layout_weight="1">
        <!--    <RelativeLayout-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content">-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1" >
                <TableRow android:layout_width="fill_parent">
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity2"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity3"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />


                </TableRow>

                <TableRow android:layout_width="fill_parent">
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity4"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity5"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity6"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />


                </TableRow>

                <TableRow android:layout_width="fill_parent">
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity7"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity8"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity9"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />


                </TableRow>

                <TableRow android:layout_width="fill_parent">
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity10"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity11"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartActivity12"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        tools:ignore="MissingConstraints" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
