<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Spinner
            android:id="@+id/cboSubjectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"
            android:padding="0dp"
            android:prompt="@string/section_prompt"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/cboQuizCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="60dp"
            android:padding="0dp"
            android:prompt="@string/section_prompt"
            android:spinnerMode="dialog" />



        <Button
            android:id="@+id/btnImportAnswer"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="90dp"
            android:text="IMPORT ANSWER"
            android:textSize="15dp" />


        <Button
            android:id="@+id/btnDeleteAllAnswer"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="90dp"
            android:text="DELETE ANSWER"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnAddAnswer"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="130dp"
            android:text="ADD ANSWER"
            android:textSize="12dp" />


        <Button
            android:id="@+id/btnAddQuiz"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="130dp"
            android:text="ADD QUIZ"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnOpenPDF"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="130dp"
            android:text="OPEN PDF"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnAddNewSet"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="130dp"
            android:text="ADD NEW SET"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnQuizSet"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="130dp"
            android:text="A"
            android:textSize="20dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="200dp"
            android:id="@+id/listAnswer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfview"
            android:layout_width="450dp"
            android:layout_height="600dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="200dp"
            android:visibility="visible"></com.github.barteksc.pdfviewer.PDFView>



    </RelativeLayout>

</LinearLayout>
